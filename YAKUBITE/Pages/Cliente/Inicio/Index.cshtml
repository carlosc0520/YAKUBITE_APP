@page
@model YAKUBITE.Pages.Cliente.Inicio.IndexModel
@{
    Layout = "Layouts/_FrontLayout";
    ViewData["Title"] = "Inicio - Cliente";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/nouislider/nouislider.dist.css" />
    <link rel="stylesheet" href="~/vendor/libs/swiper/swiper.dist.css" />
}
@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/front-page-landing.dist.css" />
}
@section VendorScripts {
    <script src="~/vendor/libs/nouislider/nouislider.dist.js"></script>
    <script src="~/vendor/libs/swiper/swiper.dist.js"></script>
}
@section PageScripts {
    <script src="~/js/front-page-landing.dist.js"></script>
}

@* ************** Content ************** *@
<div data-bs-spy="scroll" class="scrollspy-example">

    <!-- Hero: Start -->
    <section id="hero-animation">
        <div id="landingHero" class="section-py landing-hero position-relative">
            <div class="container">
                <div class="hero-text-box text-center">
                    <h1 class="text-primary hero-title display-4 fw-bold"
                    style="font-style: italic;"
                    >
                        ¡Bienvenidos a Yakubite!
                    </h1>
                    <h2 class="hero-sub-title h6 mb-4 pb-1">
                        Nos dedicamos a ofrecer un sitio donde las personas<br class="d-none d-lg-block" />
                    puedan consumir diferentes platos saludables de distintos restaurantes. 
                    </h2>
                </div>
                <div id="heroDashboardAnimation" class="hero-animation-img">
                    <a href="/Apps/Ecommerce/Dashboard" target="_blank">
                        <div id="heroAnimationImg" class="position-relative hero-dashboard-img">
                            <img src="~/resources/logo_completo.png" alt="hero dashboard" class="animation-img"/>
                            <img src="~/resources/logo_completo.png" alt="hero elements" class="position-absolute hero-elements-img animation-img top-0 start-0"  />
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="landing-hero-blank"></div>
    </section>
    <!-- Hero: End -->

    <!-- Useful features: Start --> 
    <section id="landingFeatures" class="section-py landing-features">
        <div class="container">
            <h3 class="text-center mb-1">
                <span class="section-title">Nos caracterizamos por</span>
            </h3>
            <p class="text-center mb-3 mb-md-5 pb-3">
                Ofrecemos una plataforma donde los usuarios pueden disfrutar de una amplia variedad de platos saludables.
            </p>
            <div class="features-icon-wrapper row gx-0 gy-4 g-sm-5">

                <div class="col-lg-4 col-sm-6 text-center features-icon-box">
                    <div class="text-center mb-3">
                        <img src="~/img/front-pages/icons/user-success.png" alt="laptop" class="mb-2" />
                    </div>
                    <h5 class="mb-3">Experiencia</h5>
                    <p class="features-icon-description">
                        Contamos con una amplia experiencia en el mercado, lo que nos permite ofrecer un servicio de calidad.
                    </p>
                </div>

                <div class="col-lg-4 col-sm-6 text-center features-icon-box">
                    <div class="text-center mb-3">
                            <img src="~/img/front-pages/icons/diamond-info.png" alt="laptop" class="mb-2" />
                    </div>
                    <h5 class="mb-3">Variedad</h5>
                    <p class="features-icon-description">
                        Ofrecer una amplia variedad de platos saludables, para que nuestros usuarios puedan disfrutar de diferentes opciones.
                    </p>
                </div>

                <div class="col-lg-4 col-sm-6 text-center features-icon-box">
                    <div class="text-center mb-3">
                            <img src="~/img/front-pages/icons/check-warning.png" alt="laptop" class="mb-2" />
                    </div>
                    <h5 class="mb-3">Calidad</h5>
                    <p class="features-icon-description">
                        Nos preocupamos por ofrecer un servicio de calidad, para que nuestros usuarios puedan disfrutar de una experiencia agradable.
                    </p>
                </div>


                
            </div>
        </div>
    </section>
