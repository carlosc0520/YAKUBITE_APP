    <!-- FAQ: Start -->
    <section id="landingFAQ" class="section-py bg-body landing-faq">
        <div class="container">

            <h3 class="text-center mb-1">Preguntas <span class="section-title">frecuentes</span></h3>
            <p class="text-center mb-5 pb-3">
                Aquí encontrarás las preguntas más frecuentes que nuestros clientes
            </p>
            <div class="row gy-5">
                <div class="col-lg-5">
                    <div class="text-center">
                        <img src="~/img/front-pages/landing-page/faq-boy-with-logos.png" alt="faq boy with logos" class="faq-image" />
                    </div>
                </div>
